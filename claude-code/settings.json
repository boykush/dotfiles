{
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|NotebookEdit|Read",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/helix-open.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/helix-reload.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/helix-open.sh"
          }
        ]
      }
    ]
  }
}
